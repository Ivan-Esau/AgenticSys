# GitLab Configuration (Required)
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_access_token_here
GITLAB_PROJECT_ID=your_project_id

# MCP Server Configuration (Required)
MCP_HOST=localhost
MCP_PORT=3333
MCP_PATH=/mcp

# LLM Provider Configuration
# Set LLM_PROVIDER to choose your preferred provider
LLM_PROVIDER=deepseek

# General LLM Settings
LLM_TEMPERATURE=0
LLM_MAX_RETRIES=5

# DeepSeek Configuration (Default Provider)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# OpenAI Configuration (Optional)
# Uncomment and set these if using OpenAI
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4o-mini

# Anthropic/Claude Configuration (Optional)
# Uncomment and set these if using Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# CLAUDE_MODEL=claude-3-5-haiku

# Groq Configuration (Optional) 
# Uncomment and set these if using Groq
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_MODEL=llama-3.1-8b

# Ollama Configuration (Optional - Local Models)
# Uncomment and set these if using Ollama
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.1

# Agent Configuration
DEFAULT_BRANCH=main
MAX_ISSUES_TO_SELECT=5
SHOW_TOKENS=true
AGENT_RECURSION_LIMIT=200

# Runner Configuration (Optional)
AUTO_CREATE_RUNNER=false
RUNNER_TAGS=docker
RUNNER_NAME_PREFIX=auto-runner